{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "NODE_ENV=production firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "mocha --exit test/*.test.js",
    "create-dev-tables": "node ./backend/database/dbConnection createAllTables",
    "create-prod-tables": "node ./backend/database/dbConnectionPrd createAllTables",
    "drop-dev-tables": "node ./backend/database/dbConnection dropAllTables",
    "drop-prod-tables": "node ./backend/database/dbConnectionPrd dropAllTables",
    "migrate-tables": "node ./backend/database/dbConnection migrateData",
    "migrate-prod-tables": "node ./backend/database/dbConnectionPrd migrateData",
    "start:dev": "nodemon --watch backend/index",
    "debug": "NODE_ENV=development nodemon --inspect backend/index.js",
    "product:start": "NODE_ENV=production nodemon --inspect backend/index.js",
    "setup": "npm-run-all -p create-dev-tables start",
    "setupdev2": "npm-run-all -p create-dev2-tables start",
    "startWithConfig": "env-cmd -f ./.env nodemon backend/src/app.js",
    "crawler": "set NODE_TLS_REJECT_UNAUTHORIZED=0&& set rejectUnauthorized=false&& node --unhandled-rejections=strict backend/crawler/npmexecute.js",
    "crawlsummary": "set NODE_TLS_REJECT_UNAUTHORIZED=0&& set rejectUnauthorized=false&& node --unhandled-rejections=strict backend/crawler/npmexecute.summary.js",
    "mac:crawler": "node backend/crawler/npmexecute.js",
    "cheerio": "set NODE_TLS_REJECT_UNAUTHORIZED=0&& set rejectUnauthorized=false&& node --unhandled-rejections=strict backend/crawler/cheerio/index.js",
    "crawl:noval": "set NODE_TLS_REJECT_UNAUTHORIZED=0&& set rejectUnauthorized=false&& node --unhandled-rejections=strict backend/crawler/npmexecute.noval.js",
    "crawl:chapter": "set NODE_TLS_REJECT_UNAUTHORIZED=0&& set rejectUnauthorized=false&& node --unhandled-rejections=strict backend/crawler/npmexecute.chapter.js",
    "crawl:allnewchapter": "set NODE_TLS_REJECT_UNAUTHORIZED=0&& set rejectUnauthorized=false&& node --unhandled-rejections=strict backend/crawler/npmexecute.newchapter.js",
    "dep:firebase": "NODE_ENV=production firebase deploy",
    "dep:firebase:note": "NODE_ENV=production firebase deploy --only functions:api",
    "firebase": "NODE_ENV=production firebase serve --only functions,hosting"
  },
  "engines": {
    "node": "14"
  },
  "main": "index.js",
  "dependencies": {
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.1",
    "@babel/polyfill": "^7.12.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.9",
    "cookie-parse": "^0.4.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "gcp-metadata": "^4.1.0",
    "google-auth-library": "^7.0.4",
    "got": "^9.6.0",
    "jsonwebtoken": "^8.5.1",
    "make-runnable": "^1.3.9",
    "moment": "^2.29.1",
    "npm-run-all": "^4.1.5",
    "pg": "^8.6.0",
    "puppeteer": "^9.1.1",
    "sequelize": "^6.6.2",
    "shelljs": "^0.8.4",
    "superagent": "^6.1.0",
    "swagger-ui": "^3.49.0",
    "swagger-ui-dist": "^3.48.0",
    "uuid": "^8.3.2",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "firebase-functions-test": "^0.2.0",
    "env-cmd": "^10.1.0",
    "mocha": "^8.4.0",
    "nodemon": "^2.0.7",
    "supertest": "^6.0.0"
  },
  "private": true
}
