{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "root/*": ["frontend/src/*"],
      "controller/*": ["deployment/firebase/functions/backend/controller/*"],
      "model/*": ["deployment/firebase/functions/backend/domainModel/*"],
      "modelService/*": ["deployment/firebase/functions/backend/domainService/*"],
      "database/*": ["deployment/firebase/functions/backend/database/*"],
      "service/*": ["deployment/firebase/functions/backend/applicationService/*"],
      "sequelize/*": ["deployment/firebase/functions/backend/sequelize/*"],
    },
    "plugins": [
      {
        "afterDeclarations": true
      }
    ]
  }
}
